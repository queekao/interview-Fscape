{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' https://interview-fscape.vercel.app; connect-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "no-referrer-when-downgrade"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "geolocation=(self 'https://interview-fscape.vercel.app'), microphone=('https://interview-fscape.vercel.app')"
                }
            ]
        }
    ]
}